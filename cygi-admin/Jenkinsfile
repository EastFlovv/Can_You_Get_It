node{
    def WORKSPACE = "/var/jenkins_home/workspace/spring-deploy/cygi-admin/"
    def dockerImageTag = "springboot-deploy-${env.BUILD_NUMBER}"

    try{
        stage('Clone Repo'){
            git url: 'https://lab.ssafy.com/s08-final/S08P31A806.git',
                credentialsId: 'wnsdk', // Jenkins에서 설정한 credentail의 ID
                branch: 'deploy-back-admin'
        }

        stage('Gradle Build'){
            dir('cygi-admin/'){
                sh 'ls'
                sh 'chmod +x ./gradlew'
                sh './gradlew clean build'
            }
        }

        stage('Build docker'){
            dockerImage = docker.build("springboot-deploy:${env.BUILD_NUMBER}", "./cygi-admin/")
        }

        stage('Deploy docker'){
            echo "Docker Image Tag Name: ${dockerImageTag}"
            // sh "docker stop springboot-deploy || true && docker rm springboot-deploy || true"
            sh "docker run --name springboot-deploy -d -p 3000:8080 springboot-deploy:${env.BUILD_NUMBER}"
            sh "docker image prune -a -f || true"
        }
    }catch(e){
        throw e
    }
}
